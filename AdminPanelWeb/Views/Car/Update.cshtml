@{
    Layout = "_Layout";
}
@model Cars
<div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-2">
            <h5 class="font-weight-bolder mr-2">Yönetim Paneli</h5>
            <h5 class="font-weight-bolder mr-2">-</h5>
            <h5 class="font-weight-bolder mr-2">Blog Kategori Düzenleme </h5>
        </div>
    </div>
</div>
<div class="d-flex flex-column-fluid">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <form asp-controller="Car" asp-action="Update"  method="post">
                    <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                    <div class="card-body">
                        <div class="row form-group">
                            <div class="col-md-3">
                                <label class="control-label"> İsim</label>
                                <input class="form-control" asp-for="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label class="control-label"> Resim Yolu</label>
                                <input class="form-control" asp-for="CarsImagePath" />
                                <span asp-validation-for="CarsImagePath" class="text-danger"></span>

                            </div> <div class="col-md-3">
                                <label class="control-label"> Marka</label>
                                <input class="form-control" asp-for="Brand" />
                                <span asp-validation-for="Brand" class="text-danger"></span>

                            </div>
                        </div><div class="row form-group">
                            <div class="col-md-3">
                                <label class="control-label"> Model</label>
                                <input class="form-control" asp-for="Modal" />
                                <span asp-validation-for="Modal" class="text-danger"></span>

                            </div>
                            <div class="col-md-3">
                                <label class="control-label"> Vites Tipi</label>
                                <input class="form-control" asp-for="Gear" />
                                <span asp-validation-for="Gear" class="text-danger"></span>

                            </div> <div class="col-md-3">
                                <label class="control-label"> Kategori</label>
                                <input class="form-control" asp-for="Category" />
                                <span asp-validation-for="Category" class="text-danger"></span>

                            </div>
                        </div><div class="row form-group">
                            <div class="col-md-3">
                                <label class="control-label"> Yakıt Tipi</label>
                                <input class="form-control" asp-for="Fuel" />
                                <span asp-validation-for="Fuel" class="text-danger"></span>

                            </div>
                            <div class="col-md-3">
                                <label class="control-label"> Kiralama Ücreti</label>
                                <input class="form-control" asp-for="RentFee" />
                                <span asp-validation-for="RentFee" class="text-danger"></span>

                            </div> <div class="col-md-3">
                                <label class="control-label"> İnsan</label>
                                <input class="form-control" asp-for="People" />
                                <span asp-validation-for="People" class="text-danger"></span>

                            </div>
                        </div><div class="row form-group">
                            <div class="col-md-6">
                                <label class="control-label"> Kapı Sayısı</label>
                                <input class="form-control" asp-for="Doors" />
                                <span asp-validation-for="Doors" class="text-danger"></span>

                            </div>
                            <div class="col-md-6">
                                <label class="control-label"> Bagaj</label>
                                <input class="form-control" asp-for="Luggage" />
                                <span asp-validation-for="Luggage" class="text-danger"></span>

                            </div>


                        </div>

                        <div class="row form-group">
                            <div class="col-lg-12">
                                <input type="submit" class="btn btn-primary" value="Güncelle" style="float: right;" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>