@{
    Layout = "_Layout";
}

@model List<UserDTO>
<link href="assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
<div class="d-flex flex-column-fluid">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered" id="tablolar" style="width:100%">
                            <thead>
                                <tr>
                                    <td>ID</td>
                                    <td>Ad Soyad</td>
                                    <td>E Posta</td>
                                    <td>Kullanıcı Adı</td>
                                    <td>Aktif Mi?</td>
                                    <td>Düzenle</td>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model != null && Model.Count > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.FullName</td>
                                                <td>@item.Email</td>
                                                <td>@item.UserName</td>
                                                @if (item.IsActive)
                                                {
                                                    <td><a onclick="return ActiveConfirm()" class="btn" asp-route-id="@item.Id" style="padding-top:0px;" asp-action="Delete"><i class="fas fa-toggle-on fa-2x" style="color:lawngreen;"></i></a></td>
                                                }
                                                else
                                                {
                                                    <td><a onclick="return ActiveConfirm()" class="btn" asp-route-id="@item.Id" style="padding-top:0px;" asp-action="Delete"><i class="fas fa-toggle-off fa-2x" style="color:red;"></i></a></td>
                                                }
                                                <td width="125px"><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary"><i class="la la-pencil"></i> Düzenle</a></td>

                                            </tr>
                                        }
                                    }
                                    else
                                    {

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

