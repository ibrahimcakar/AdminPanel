@{
    Layout = "_Layout";
}
@model Category
<div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-2">
            <h5 class="font-weight-bolder mr-2">Yönetim Paneli</h5>
            <h5 class="font-weight-bolder mr-2">-</h5>
            <h5 class="font-weight-bolder mr-2">Adress Ekleme </h5>
        </div>
    </div>
</div>
<div class="d-flex flex-column-fluid">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <form asp-controller="Category" asp-action="Create" method="post">
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label class="control-label">Adress Satırı</label>
                            <input class="form-control" asp-for="Name" required />
                        </div>
                        <div class="col-md-6">
                            <label class="control-label">Kullanıcı Adı</label>
                            <input class="form-control" asp-for="ParentCategoryId" required />
                            <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <input type="submit" class="btn btn-primary" value="Kaydet" style="float: right;" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>