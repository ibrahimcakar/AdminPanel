@{
    Layout = "_Layout";
}

@model List<Category>
    <div class="row form-group">
        <div class="col-lg-12">
            <a href="/Adress/Create" class="btn btn-primary" style="float: right;">Ekle</a>
        </div>
    </div>
<link href="assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
<div class="d-flex flex-column-fluid">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered" id="tablolar" style="width:100%">
                            <thead>
                                <tr>
                                    <td>ID</td>
                                  
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model != null && Model.Count > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.Name</td>
                                                <td>@item.ParentCategoryId</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

